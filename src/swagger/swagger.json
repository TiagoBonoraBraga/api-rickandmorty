{
  "openapi": "3.0.0",
  "info": {
    "title": "Api Rick and Morty",
    "description": "Api para crud de personagens",
    "termsOfService": "",
    "contact": {
      "email": "ogait.desenvolvedor.jr@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://rickandmortyapiblue.herokuapp.com",
      "description": "API de produção"
    },
    {
      "url": "http://localhost:3001",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Lista de todas os characters",
        "description": "Rota responsável por listas todos os characters",
        "tags": ["Characters"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Character"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/find/{id}": {
      "get": {
        "summary": "Lista um character pelo Id",
        "description": "Rota responsável por buscar um character pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do character para busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Id inválido"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/create": {
      "post": {
        "summary": "Cadastrar um character",
        "description": "Rota responsável por cadastrar um character",
        "tags": ["Characters"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Character"
              },
              "examples": {
                "Character": {
                  "value": {
                    "user": "kkk",
                    "name": "Tião",
                    "imagem": "./assets/imagens/tiao.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Character"
                }
              }
            }
          }
        }
      }
    },
    "/update/{id}": {
      "put": {
        "summary": "Editar um character pelo Id",
        "description": "Rota responsável por editar um paleta pelo Id",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da paletapara a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Character"
              },
              "examples": {
                "Character": {
                  "value": {
                    "user": "tii",
                    "name": "Tião editado",
                    "imagem": "./assets/imagens/tiaoeditado.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Character"
                }
              }
            }
          }
        }
      }
    },
    "/delete/{id}": {
      "delete": {
        "summary": "Apagar um character pelo Id",
        "description": "Rota responsável por apagar um character pelo Id",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do character para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/search": {
      "get": {
        "summary": "Buscar usuarios cadastrados por nome",
        "description": "Rota responsável por buscar usuario por nome",
        "tags": ["Characters"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "message",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "description": "unauthorized"
          },
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Character"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "summary": "Criar um novo usuário",
        "description": "Rota responsável por criar um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "cacau lima",
                    "username": "cacode",
                    "email": "ffff@gmail.com",
                    "password": "12345",
                    "avatar": "http://fff.com/fff.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not found"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Busca todos os usuários",
        "description": "Rota responsável por buscar todos os usuário",
        "tags": ["Users"],
        "responses": {
          "400": {
            "description": "Not found"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Entrar no rick and morty",
        "description": "Rota responsável por fazer o login de um usuário cadastrado",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "User": {
                  "value": {
                    "email": "ffff@gmail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Not Found"
          },
          "200": {
            "description": "Ok"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Character": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "imagem": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        }
      }
    }
  }
}
